<h1>Add A Concert</h1>

<%= form_for @concerts do |f| %>
	
	<div>
	<%= f.label :name %>
	<%= f.text_field :name %>
	</div>
	<div>
	<%= f.label :venue %>
	<%= f.text_field :venue %>
	</div>
	<div>
	<%= f.label :city %>
	<%= f.text_field :city %>
	</div>
	<div>
	<%= f.label :date %>
	<%= f.date_field :date %>
	</div>
	<div>
	<%= f.label :price %>
	<%= f.text_field :price %>
	</div>
	<div>
	<%= f.label :description %>
	<%= f.text_field :description %>
	</div>

	<%= f.button %>
<% end %>